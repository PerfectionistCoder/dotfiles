#! /usr/bin/env bash

readonly mod="Super"
readonly move_mod="Super+Shift"
readonly size_mod="Super+Control"
readonly mode_mod="Super+Alt"

readonly term="alacritty"
readonly menu="kickoff"
readonly fm="lf"

riverctl map normal $mod Return spawn $term
riverctl map normal $mod S spawn $menu
riverctl map normal $mod E spawn "$term -e $fm"

riverctl map normal $mod Q close
riverctl map normal $mod Space toggle-float
riverctl map normal $mod F toggle-fullscreen

riverctl map normal $mod J focus-view previous
riverctl map normal $mod K focus-view next

riverctl map normal $move_mod J swap previous
riverctl map normal $move_mod K swap next

riverctl map normal $size_mod H send-layout-cmd rivertile "main-ratio -0.025"
riverctl map normal $size_mod L send-layout-cmd rivertile "main-ratio +0.025"
riverctl map normal $move_mod H send-layout-cmd rivertile "main-count -1"
riverctl map normal $move_mod L send-layout-cmd rivertile "main-count +1"

riverctl map normal $mod Up    send-layout-cmd rivertile "main-location top"
riverctl map normal $mod Right send-layout-cmd rivertile "main-location right"
riverctl map normal $mod Down  send-layout-cmd rivertile "main-location bottom"
riverctl map normal $mod Left  send-layout-cmd rivertile "main-location left"

declare -A modes=(power P)
for mode in ${!modes[*]}; do
    key=${modes[$mode]}
    riverctl declare-mode $mode
    riverctl map normal $mode_mod $key enter-mode $mode
    riverctl map $mode None Escape enter-mode normal
done

riverctl map power None P spawn poweroff
riverctl map power None R spawn reboot
riverctl map power None S spawn "riverctl enter-mode normal && systemctl suspend"
riverctl map power None Q exit

riverctl map-pointer normal $mod BTN_LEFT move-view
riverctl map-pointer normal $mod BTN_RIGHT resize-view

for i in $(seq 1 9); do
    tags=$((1 << ($i - 1)))
    riverctl map normal $mod $i set-focused-tags $tags
    riverctl map normal $move_mod $i set-view-tags $tags
done
